<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.morgan.manage.system.dao.RoleMenuMapper" >


  <sql id="roleMenu_column_list">
    id,role_id,menu_id
  </sql>

  <select id="findMenusByRoleId" parameterType="int" resultMap="roleMenu">
    SELECT <include refid="roleMenu_column_list"/>
    FROM sys_role_menu
    WHERE role_id = #{roleId}
  </select>
</mapper>