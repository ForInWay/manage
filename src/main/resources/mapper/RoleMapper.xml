<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.morgan.manage.system.dao.RoleMapper" >


  <sql id="allSelectColumns">
    id,role_name AS roleNmae,role_sign AS roleSign,
    create_time AS createTime,update_time AS updateTime
  </sql>

  <select id="findRoleById" resultType="com.morgan.manage.system.model.SysRole">
    SELECT <include refid="allSelectColumns"/>
    FROM sys_role
    WHERE id = #{id}
  </select>
</mapper>