<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.morgan.manage.system.dao.UserMapper" >

  <sql id="user_column_list">
    id,username,`name`,password,email,status,dept_id,create_time,update_time
  </sql>

  <select id="findUserByName" parameterType="string" resultMap="user">
    SELECT <include refid="user_column_list"/>
    FROM sys_user
    WHERE username = #{userName}
  </select>
</mapper>