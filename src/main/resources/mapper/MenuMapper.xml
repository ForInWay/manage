<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.morgan.manage.system.dao.MenuMapper" >


    <select id="findMenuById" parameterType="int" resultMap="menu">
        SELECT <include refid="menu_column_list"/>
        FROM sys_menu
        WHERE id = #{id}
    </select>

    <sql id="menu_column_list">
        id,parent_id,`name`,url,perm,`type`,icon,order_num,create_time,update_time
    </sql>
</mapper>